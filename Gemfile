gem 'jbuilder', '~> 2.4.1' # Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'sdoc', '~> 0.4.1', group: :doc # bundle exec rake doc:rails generates the API under doc/api.
gem 'rest-client', '~> 1.8.0'
