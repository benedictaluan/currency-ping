- if flash[:notice]
  .row
    .col-md-12
      .flash.text-center
        %h1= flash[:notice]
        %h3= t('notice.success_details')
- else
  .row
    .col-md-12
      .masthead.text-center
        %h1.description
          = t('app.description').html_safe
        %h3= t('app.instructions')

    .col-md-6.col-md-offset-3
      = form_for @subscription, html: { class: 'subscription-form', role: 'form' } do |f|
        .form-group
          = f.select 'base', options_from_collection_for_select(::Base.all.to_a, 'id', 'currency_name'), {}, { class: 'form-control input-lg' }
        .form-group
          = f.select 'country', options_from_collection_for_select(::Country.all.to_a, 'id', 'currency_name'), {}, { class: 'form-control input-lg' }
        .form-group
          = f.fields_for 'user' do |u| 
            = u.text_field :email, placeholder: 'Email', class: 'form-control input-lg'
        .form-group
          = f.submit 'Start Monitoring!', class: 'btn btn-success btn-lg btn-block', id: 'subscription-submit'
